<div id= "header" class= "col s12">
    <h1>EAT-DA-BURGER!</h1>
</div>


<div class= "row">

    <div id = "eatlist" class= "col s4">
        <h2>TRY A BURGER</h2>

        <ul>
         {{#each burgers}}
             {{#unless devoured}}
                 {{> burgers/burger-block devoured=true}}
            {{/unless}}
        {{/each}}
        </ul>

    </div>

    <div id= "burger img" class= "col s4">
        image
    </div>

    <div id= "devouredlist" class = "col s4">
        <h2>EATEN BURGERS</h2>

        <ul>
             {{#each burgers}}
                {{#if devoured}}
                     {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>

    </div>

    
</div>


<div class= "row">
    <div id= "burgerform" class= "col s6 offset-s3">
        <h2>MAKE A BURGER</h2>

            <form class= "create-form">
                <div class= "form-group">
                    <label for = "newburger">What kind of burger?</label>
                    <input type="text" id="newburger" name="burger_name">
                    </div>

             <button class="btn waves-effect waves-light deep-purple accent-2" type="submit" name="action">
                 SEND TO THE KITCHEN!
            </button>

            </form>
        </div>
    </div>


